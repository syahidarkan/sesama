# ============================================
# DATABASE (PostgreSQL)
# ============================================
# For shared hosting: use managed DB or remote PostgreSQL
DATABASE_URL="postgresql://username:password@localhost:5432/kita_bisa?schema=public"

# ============================================
# JWT AUTHENTICATION
# ============================================
JWT_SECRET="your-super-secret-jwt-key-CHANGE-THIS-IN-PRODUCTION"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_SECRET="your-refresh-secret-CHANGE-THIS-IN-PRODUCTION"
JWT_REFRESH_EXPIRES_IN="7d"

# ============================================
# SESSION MANAGEMENT
# ============================================
SESSION_IDLE_TIMEOUT=600000  # 10 minutes in milliseconds
SESSION_MAX_AGE=86400000     # 24 hours in milliseconds

# ============================================
# MIDTRANS PAYMENT GATEWAY (SANDBOX)
# ============================================
# Dapatkan credentials di: https://dashboard.sandbox.midtrans.com
# 1. Sign up gratis di Midtrans Sandbox
# 2. Settings > Access Keys
# 3. Copy Server Key & Client Key
MIDTRANS_SERVER_KEY="<MIDTRANS_SERVER_KEY>_SERVER_KEY_HERE"
MIDTRANS_CLIENT_KEY="<MIDTRANS_CLIENT_KEY>_CLIENT_KEY_HERE"
MIDTRANS_IS_PRODUCTION=false
MIDTRANS_MERCHANT_ID="YOUR_MERCHANT_ID"

# ============================================
# EMAIL CONFIGURATION (for OTP)
# ============================================
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-specific-password"
EMAIL_FROM="SobatBantu Platform <noreply@sobatbantu.id>"

# ============================================
# OTP & 2FA
# ============================================
OTP_EXPIRES_IN=300000  # 5 minutes in milliseconds
OTP_ISSUER="SobatBantu Platform"

# ============================================
# APPLICATION
# ============================================
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:3000
ADMIN_FRONTEND_URL=http://localhost:3000/admin

# ============================================
# RATE LIMITING (Security)
# ============================================
THROTTLE_TTL=60000   # 1 minute
THROTTLE_LIMIT=10    # Max 10 requests per minute

# ============================================
# FILE UPLOAD (for shared hosting)
# ============================================
UPLOAD_DIR="./uploads"  # Or use cloud storage (S3, CloudFlare R2, etc.)
MAX_FILE_SIZE=5242880   # 5MB in bytes

# ============================================
# AUDIT LOG RETENTION
# ============================================
AUDIT_LOG_RETENTION_DAYS=365  # Keep logs for 1 year
